    <icon>logo-t4-file-manager.png</icon>
    <authors>Akara Team; René Leupold, Johnny Graber</authors>
    <owners>Akara Team;databindinggmbh</owners>
    <repository type="git" url="https://github.com/nobyArdor/T4.FileManager.VisualStudio" />
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <copyright>Copyright 2023 Akara Team</copyright>
    <tags>
      t4 file manager code generation c# f# php python javascript java vb blazor razor html css 
      visual studio vs vsstudio metadata programming dsl shared structure timesaver 
    </tags>
    <license type="file">LICENSE.txt</license>
    <releaseNotes>
      see https://databinding-gmbh.github.io/T4.FileManager.VisualStudio/12-Change-log/
    </releaseNotes>
